@model HomeViewModel
<h1>The best cars</h1>
<div class="row mt-5 mb-2">
    @{
        foreach (Car car in Model.favCars)
        {
            @* @Html.Partial("AllCars", car) *@
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@car.img" alt="@car.name" />
                <h2>Model: @car.name</h2>
                <p>@car.shortDesc</p>
                <p>Price: @car.price.ToString("c")</p>
                <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@car.id">Add to cart</a></p>
            </div>
        }

    }
</div>
